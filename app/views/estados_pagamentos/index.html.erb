<div class="page-header">
  <h1>Estados dos pagamentos</h1>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @estados_pagamentos.each do |estados_pagamento| %>
  <tr>
    <td><%= estados_pagamento.estado %></td>
    <td><%= link_to 'detalhes', estados_pagamento %></td>
    <td><%= link_to '<i class="icon-pencil"></i>&nbsp;editar'.html_safe, edit_estados_pagamento_path(estados_pagamento), :class => 'btn' %></td>
    <td><%= link_to '<i class="icon-trash icon-white"></i>&nbsp;eliminar'.html_safe, estados_pagamento, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar', new_estados_pagamento_path, :class => 'btn btn-primary' %>